{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "webpack-env",
            "jest",
            "reflect-metadata"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@test/*": [
                "test/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost",
            "es6"
        ]
    },
    "include": [
        "types-d-ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
//        TODO remove it, when return to tests
//        "tests/**/*.ts",
//        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
